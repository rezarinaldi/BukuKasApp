<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="card_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/text_header</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tv_menu">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/text_link</item>
    </style>

    <style name="input_label">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="button_style">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColor">@color/text_header</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="menu_tittle">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="card_sub_tittle">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/text_normal</item>
    </style>

    <style name="input">
        <item name="android:background">@drawable/bg_gray_rounded</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textColor">@color/text_input</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>